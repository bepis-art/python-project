FROM python:3.11-slim

WORKDIR /app

# Установка зависимостей
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Копируем код
COPY app/ ./app/
COPY tests/ ./tests/

# Создаём файл для запуска (чтобы избежать проблем с модулями)
RUN echo 'from app.main import main; main()' > run_bot.py

# Запуск бота
CMD ["python", "run_bot.py"]